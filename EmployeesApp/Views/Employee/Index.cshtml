@model IEnumerable<Employee>

<h1>All Employees</h1>
<br />

@using (Html.BeginForm())
{
<div class="input-group">
    @Html.TextBox("SearchByName", null, new { @class = "form-control", @placeholder = "Search by Employee Name..." })
    <input type="submit" value="Search" class="btn btn-outline-success" />
    <a asp-action="Create" class="btn btn-outline-primary">Create New Employee</a>

</div>
}

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpNum)
            </th>
            <th>
                @Html.ActionLink("Employee Name", "Index", new { sortField = "EmpName", currentSortField = ViewBag.SortField, sortDirection = ViewBag.SOrtDirection})
            </th>
            <th>
                @Html.ActionLink("Date of Birth", "Index", new { sortField = "DOB", currentSortField = ViewBag.SortField, sortDirection = ViewBag.SOrtDirection })
            </th>
            <th>
                @Html.ActionLink("Hiring Date", "Index", new { sortField = "HiringDate", currentSortField = ViewBag.SortField, sortDirection = ViewBag.SOrtDirection })
            </th>
            <th>
                @Html.ActionLink("Gross Salary", "Index", new { sortField = "GrossSalary", currentSortField = ViewBag.SortField, sortDirection = ViewBag.SOrtDirection })
            </th>
            <th>
                @Html.ActionLink("Net Salary", "Index", new { sortField = "NetSalary", currentSortField = ViewBag.SortField, sortDirection = ViewBag.SOrtDirection })
            </th>
            <th>
                @Html.ActionLink("Department Name", "Index", new { sortField = "DepartmentName", currentSortField = ViewBag.SortField, sortDirection = ViewBag.SOrtDirection })
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(i => item.EmpNum)
            </td>
            <td>
                @Html.DisplayFor(i => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(i => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(i => item.HiringDate)
            </td>
            <td>
                @Html.DisplayFor(i => item.GrossSalary)
            </td>
            <td>
                @Html.DisplayFor(i => item.NetSalary)
            </td>
            <td>
                @Html.DisplayFor(i => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmpId })
            </td>
            <td>
                @Html.ActionLink("Delete",
                                 "Delete",
                                  new { id = item.EmpId },
                                  new { onclick = "return confirm('Are you sure you want to delete this employee?');" })
            </td>
        </tr>
        }
    </tbody>
</table>
